# Required Environment Variables
# Database connection URL (PostgreSQL)
# Development: Local PostgreSQL
# DB_URL=postgresql://username:password@localhost:5432/fastfood
# Production: Cloud database (e.g., Neon, Supabase, AWS RDS)
# DB_URL=postgresql://username:password@hostname:5432/database

# Public base URL for the application (used for metadata, API calls, payments)
# Development: Local development server
# NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Production: Your deployed domain
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# Secret key for JWT session encryption (generate a strong random string)
SESSION_SECRET=your-super-secret-session-key-here

# MercadoPago configuration for payments
MP_ACCESS_TOKEN=TEST-1234567890123456-123456-7890123456789012345678901234567890

# Optional Environment Variables
# Email service configuration (Resend)
RESEND_API_KEY=re_1234567890abcdef

# Redis configuration for rate limiting (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Error tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Alternative: Use NEXT_PUBLIC_SENTRY_DSN for client-side Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging configuration
LOG_LEVEL=info

# Enable Sentry in development (set to 'true' to enable)
SENTRY_DEV=false

# CI/CD - Vercel Integration (Required for automated deployments)
# Get these tokens from: https://vercel.com/dashboard/integrations
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here
VERCEL_URL=https://your-app-name.vercel.app

# CI/CD - Deployment Notifications
# Email address to receive deployment status notifications
DEPLOYMENT_NOTIFICATION_EMAIL=admin@yourdomain.com